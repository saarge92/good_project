{% extends 'base.html.twig' %}

{% block title %}Good's list{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/remove_click.js') }}"></script>
{% endblock %}

{% block body %}
    <a href="{{ path('good_create') }}" class="btn btn-danger" ><i class="fa-solid fa-plus"></i>Add new good</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
        </tr>
        </thead>
        {% for good in goods %}
            <tr id="row{{ good.id }}">
                <td>
                    {{ good.name }}
                </td>
                <td>
                    {{ good.price }}
                </td>
                <td>
                    {{ good.description }}
                </td>
                <td>
                    <a href="{{ path('good_one', {'id' :good.id}) }}" class="btn btn-primary">
                        <i class="fa-solid fa-magnifying-glass"></i>Review</a>
                </td>
                <td>
                    <button class="btn btn-dark deleteBtn" id="{{ good.id }}"><i class="fa-solid fa-delete-left"></i>Remove</button>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
